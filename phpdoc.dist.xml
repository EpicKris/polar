<phpdoc>
	<title>Polar</title>
	<parser>
		<target>data</target>
		<markers>
			<item>TODO</item>
			<item>FIXME</item>
		</markers>
		<extensions>
			<item>php</item>
		</extensions>
	</parser>
	<transformer>
		<target>data</target>
	</transformer>
	<logging>
		<level>warn</level>
		<paths>
			<default>data/logs/{DATE}.log</default>
		</paths>
	</logging>
	<transformations>
		<template name="responsive"/>
	</transformations>
	<files>
		<directory>polar</directory>
		<directory>polar/vendor/epickris</directory>
		<directory>src</directory>
		<file>*.php</file>
		<file>polar/vendor/epickris/*/*.php</file>
		<file>polar/vendor/epickris/*/*/*.php</file>
		<file>polar/vendor/epickris/*/*/*/*.php</file>
		<file>polar/vendor/epickris/*/*/*/*/*.php</file>
		<ignore>polar/logs/*</ignore>
		<ignore>polar/vendor/*</ignore>
	</files>
</phpdoc>